<div id="submenu">
  <%= link_to "New Ad", new_ad_path %>
</div>

<h2>Ads</h2>

<table class="list">
  <tr>
    <th>No#</th>
    <th>Title</th>
	  <th>Status</th>
    <th>Last Update</th>
  </tr>

  <% @ads.each do |ad| %>
  <tr>
    <td><strong><%= ad.id %></strong></td>
    <td><%= link_to ad.name, ad_path(ad) %></td>
    <td><%= ad.state.title %></td>
    <td><%= l ad.updated_at, :format => :short %></td>
  </tr>
  <% end %>
</table>