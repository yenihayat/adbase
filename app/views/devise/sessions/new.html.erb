<div id="login">
<table class="login">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <tr>
    <td class="label"><%= f.label :email, t('email') %></td>
    <td class="field"><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td class="label"><%= f.label :password, t('password') %></td>
    <td class="field"><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= f.check_box :remember_me %> <%= f.label :remember_me, t('remember_me') %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= f.submit t('login') %> <span><%= link_to t('forgot_password'), "#", :class => "forgot-password" %></span></td>
  </tr>
<% end -%>
</table>
<%= render :partial => 'forgot_password' %>
</div>