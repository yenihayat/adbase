<table class="forgot-password" style="display: none;">
<%= form_tag user_password_path do -%>
  <tr>
    <td></td>
    <td>
      <h2><%= t('forgot_password') %></h2>
      <p><%= t('we_can_send_instructions') %></p>
    </td>
  </tr>
  <tr>
    <td class="label"><%= label :user, :email, t('email') %></td>
    <td class="field"><%= text_field :user, :email %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= submit_tag t('send_instructions') %> <span><%= link_to t('cancel'), "#", :class => "login" %></span></td>
  </tr>
<% end -%>
</table>