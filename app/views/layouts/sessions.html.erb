<!DOCTYPE html>
<html>
<head>
  <title>AdBase</title>
  <%= stylesheet_link_tag "home" %>
  <%= javascript_include_tag 'jquery-1.3.2.min', :cache => true %>
  <%= javascript_include_tag 'home', :cache => true %>
  <%= csrf_meta_tag %>  
</head>
<body>
<div id="wrapper">
<div id="content">

<% flash.each do |key, msg| %>
  <%= content_tag :div, msg, :class => [key], :id => "message" %>
<% end %>

<%= yield %>
</div>
</div>
</body>
</html>
